# Integration Testing Environment Configuration - Local Development
# Copy to .env.integration.local and fill in your values

# Environment designation
INTEGRATION_TEST_ENV=local

# Local test credentials
INTEGRATION_TEST_USER=test-user-local
INTEGRATION_TEST_PASSWORD=test-password-123
INTEGRATION_TEST_TIMEOUT=60000

# Local Clerk configuration
CLERK_PUBLISHABLE_KEY=pk_test_your_local_publishable_key
CLERK_SECRET_KEY=sk_test_your_local_secret_key

# Local backend API (matches OpenAPI contract)
LOCAL_BACKEND_API_URL=http://localhost:8000/api/v1
LOCAL_FRONTEND_URL=http://localhost:3000

# Test data configuration
USE_REAL_FILES=false
ENABLE_RATE_LIMIT_TESTS=false
ENABLE_CLEANUP=false